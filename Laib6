#06.1.1
def countVowels(string):
    vocals = ["a","e","i","o","u"]
    vocalsCounter = 0
    for letter in string:
        if letter.isalpha():
            letter = letter.lower( )
            if letter in vocals:
                vocalsCounter += 1
    return vocalsCounter


#06.1.2
def countWords(string):
    string = string.split(" ")
    numberOfWords = 0
    for word in string:
        if word == "": 
            continue
        else:
            numberOfWords += 1
    return numberOfWords
testRun = countWords("Mary had a   little lamb")
print(testRun)

